<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_card"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/rec_image"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/upload"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/rec_title"
            android:text="Título"
            android:textColor="@color/teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/rec_image"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/rec_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/rec_title"
            android:gravity="center_vertical|end"
            android:text="Fecha"
            android:textColor="@color/teal"
            android:textSize="16sp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/rec_desc"
            android:text="Descripción"
            android:textColor="@color/teal"
            android:textSize="16sp"
            android:layout_toEndOf="@id/rec_image"
            android:layout_below="@+id/rec_title"
            android:maxLines="0"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>